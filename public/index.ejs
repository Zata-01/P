<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SEIKO EXPRESS - Login</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1>SEIKO EXPRESS</h1>
                <p>Ingresa tus credenciales para continuar</p>
            </div>
            
            <form id="login-form" class="login-form">
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input type="text" id="login-username" name="username" required autocomplete="username">
                </div>
                
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="login-password" name="password" required autocomplete="current-password">
                </div>
                
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                <span>&nbsp;</span>
            </form>
        </div>
        <div class="login-card">
            <div class="login-header">
                <h1>SEIKO EXPRESS</h1>
                <p>Ingresa tus credenciales para continuar</p>
            </div>
            
            <form id="register-form" class="login-form">
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input type="text" id="register-username" name="username" required autocomplete="username">
                </div>
                
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="register-password" name="password" required autocomplete="current-password">
                </div>
                
            <div class="form-group">
                    <label for="role">Rol</label>
                    <select id="role" name="role" required>
                        <option value="">Selecciona un rol</option>
                        <option value="admin">Administrador</option>
                        <option value="usuario">Usuario</option>
                    </select>
                </div>
                
                <button type="submit" class="btn btn-primary">Registrar</button>
                <span>&nbsp;</span>
            </form>
        </div>
    </div> 
    <script>
        const $ = el => document.querySelector(el)

        const loginForm = $('#login-form')
        const loginSpan = $('#login-form span')

        const registerForm = $('#register-form')
        const registerSpan = $('#register-form span')

        const logoutButton = $('#close-session')

        loginForm?.addEventListener('submit', e => {
            e.preventDefault()
            const username = $('#login-username').value
            const password = $('#login-password').value

            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password })
            })
            .then(res=> {
                if(res.ok) {
                    loginSpan.innerText = 'Login successful. Redirecting...'
                    loginSpan.style.color = 'green'
                    setTimeout(() => {
                        window.location.href = '/dashboard'
                        loginSpan.innerText = null
                    }, 2000)
                } else {
                    loginSpan.innerText = 'There was an error trying to login.'
                    loginSpan.style.color = 'red'
                }
            })
        })

        registerForm?.addEventListener('submit', e => {
            e.preventDefault()
            const username = $('#register-username').value
            const password = $('#register-password').value
            const rol = $('#role').value

            fetch('/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password, rol })
            })
            .then(res=> {
                if(res.ok) {
                    registerSpan.innerText = 'Registro exitoso. Redirigiendo...'
                    registerSpan.style.color = 'green'
                    setTimeout(() => {
                        window.location.href = '/' 
                        loginSpan.innerText = null
                    }, 2000)
                } else {
                    registerSpan.innerText = 'Hubo un error al registrarse.'
                    registerSpan.style.color = 'red'
                }
            })
        })

        logoutButton?.addEventListener('click', e => {
            fetch('/logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json' 
                }
            })
        })
    </script>
</body>
</html>
